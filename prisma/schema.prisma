generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  content         String
  coverImg        String?
  ogImage         String?
  metaTitle       String?
  metaDescription String?
  tags            String[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AdminAudit {
  id        String   @id @default(cuid())
  action    String
  entity    String?
  entityId  String?
  actor     String?
  ip        String?
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([action, createdAt])
  @@index([entity, entityId])
}
